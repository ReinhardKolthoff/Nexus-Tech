                { name: 'Basic Vendor Liaison', description: 'Coordination with third-party software and hardware vendors on your behalf.' },
                { name: 'Extended Helpdesk Support', description: 'Priority remote and limited on-site support during extended business hours.' },
                { name: 'Network Management', description: 'Monitoring, configuration, and optimization of your network infrastructure, including Wi-Fi.' },
                { name: 'Firewall Management', description: 'Configuration and maintenance of network firewalls for robust perimeter security.' },
                { name: 'Basic Data Backup & Recovery', description: 'Automated daily backups of critical data with assistance for basic data recovery.' },
                { name: 'Cloud Migration Assistance', description: 'Guidance and support for initial adoption and setup of cloud services (e.g., Microsoft 365).' },
                { name: 'Basic Cybersecurity Training', description: 'Annual user awareness training to educate employees on common cyber threats and best practices.' },
                { name: '24/7/365 Proactive Monitoring & Support', description: 'Round-the-clock monitoring with immediate response for critical IT issues.' },
                { name: 'Advanced Cybersecurity Suite', description: 'Includes Managed Detection and Response (MDR), SIEM monitoring, vulnerability scanning, and incident response planning.' },
                { name: 'Disaster Recovery Planning & Testing', description: 'Comprehensive business continuity and disaster recovery solutions, including regular testing.' },
                { name: 'Full Cloud Infrastructure Management', description: 'Optimization, cost management, and advanced security configurations for your cloud resources (Azure, AWS, Google Cloud).' },
                { name: 'Strategic IT Consulting', description: 'Dedicated IT Account Manager, Quarterly Business Reviews (QBRs), technology roadmap development, and IT budget planning.' },
                { name: 'Hardware Procurement & Lifecycle Management', description: 'Assistance with purchasing, deployment, and end-of-life management for IT assets.' }
            ];

            const servicesMatrixBody = document.querySelector('#services-matrix tbody');

            function populateMatrix() {
                servicesMatrixBody.innerHTML = ''; // Clear existing rows

                allFeaturesWithDescriptions.forEach(feature => {
                    const row = document.createElement('tr');
                    row.classList.add('hover:bg-slate-50');

                    const featureNameCell = document.createElement('td');
                    featureNameCell.classList.add('px-4', 'py-4', 'whitespace-normal', 'text-sm', 'font-medium', 'text-slate-900');
                    featureNameCell.textContent = feature.name;
                    featureNameCell.title = feature.description; // Add description as a tooltip
                    row.appendChild(featureNameCell);

                    serviceData.forEach((tier) => {
                        const tierCell = document.createElement('td');
                        tierCell.classList.add('px-4', 'py-4', 'whitespace-normal', 'text-sm', 'text-slate-600', 'text-center');
                        tierCell.textContent = tier.features[feature.name] || 'N/A'; // Display 'N/A' if feature not explicitly defined
                        row.appendChild(tierCell);
                    });
                    servicesMatrixBody.appendChild(row);
                });

                // Add the pricing row
                const priceRow = document.createElement('tr');
                priceRow.classList.add('bg-blue-50', 'font-semibold', 'text-slate-800');
                const priceLabelCell = document.createElement('td');
                priceLabelCell.classList.add('px-4', 'py-4', 'whitespace-nowrap', 'text-sm', 'font-bold');
                priceLabelCell.textContent = 'Starting Price (Per User/Month)';
                priceRow.appendChild(priceLabelCell);

                serviceData.forEach((tier) => {
                    const priceCell = document.createElement('td');
                    priceCell.classList.add('px-4', 'py-4', 'whitespace-nowrap', 'text-sm', 'text-center');
                    priceCell.textContent = new Intl.NumberFormat('en-PH', { style: 'currency', currency: 'PHP' }).format(tier.price);
                    priceRow.appendChild(priceCell);
                });
                servicesMatrixBody.appendChild(priceRow);

                // Add the user assumption row
                const userAssumptionRow = document.createElement('tr');
                userAssumptionRow.classList.add('bg-slate-100', 'text-slate-600', 'italic');
                const userAssumptionLabelCell = document.createElement('td');
                userAssumptionLabelCell.classList.add('px-4', 'py-4', 'whitespace-normal', 'text-sm', 'font-medium');
                userAssumptionLabelCell.textContent = 'Sample User Assumption';
                userAssumptionRow.appendChild(userAssumptionLabelCell);

                serviceData.forEach((tier) => {
                    const userAssumptionCell = document.createElement('td');
                    userAssumptionCell.classList.add('px-4', 'py-4', 'whitespace-normal', 'text-sm', 'text-center');
                    userAssumptionCell.textContent = tier.userAssumption;
                    userAssumptionRow.appendChild(userAssumptionCell);
                });
                servicesMatrixBody.appendChild(userAssumptionRow);
            }

            populateMatrix();

            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
