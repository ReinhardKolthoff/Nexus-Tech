                    }
                },
                {
                    id: 'strategic',
                    name: 'Strategic Partnership',
                    price: 6000, // Per user/month (adjusted for example)
                    userAssumption: 'Designed for larger SMEs and established startups (26+ users) with complex IT environments and a desire for strategic IT guidance.',
                    features: {
                        '24/7 Proactive Monitoring': 'Comprehensive',
                        'Basic Helpdesk Support': 'Included',
                        'Antivirus & Anti-Malware': 'Included',
                        'Patch Management': 'Included',
                        'Basic Vendor Liaison': 'Included',
                        'Extended Helpdesk Support': 'Included',
                        'Network Management': 'Advanced',
                        'Firewall Management': 'Included',
                        'Basic Data Backup & Recovery': 'Included',
                        'Cloud Migration Assistance': 'Included',
                        'Basic Cybersecurity Training': 'Included',
                        '24/7/365 Proactive Monitoring & Support': 'Included (Immediate Response)',
                        'Advanced Cybersecurity Suite': 'MDR, SIEM, Vulnerability Scanning, Incident Response',
                        'Disaster Recovery Planning & Testing': 'Comprehensive',
                        'Full Cloud Infrastructure Management': 'Optimization, Advanced Security, Serverless/Container Support',
                        'Strategic IT Consulting': 'Dedicated Account Manager, QBRs, Roadmap, Compliance',
